<h1>Classrooms</h1>


<form method="post" id="form">
    <fieldset>
        <legend>{{type}} Classrooms</legend>
        <p><label for="name">Name:
            <input type="text" name="name" size="30" maxlength="100" id="classname">
        </label></p>

        <p><label for="capacity">Capacity:
            <input type="number" name="capacity" id="capacity">
        </label></p>

        <p>
            <input type="submit" id="submitted">
        </p>
    </fieldset>
</form>

<script>
    if ("{{type}}" == "Edit") {
        var classname = document.getElementById("classname");
        var capacity = document.getElementById("capacity");


        if (classname) {
            classname.value = "{{row.name}}";
        }

        if (capacity) {
            capacity.value = "{{row.capacity}}";
        }

        var hiddenInput = document.createElement("input");
        hiddenInput.type = "hidden";
        hiddenInput.value = "{{row.id}}";
        hiddenInput.id = "id";
        document.getElementById("form").appendChild(hiddenInput);
    }
</script>

<script src="/clientClassrooms.js"> </script>