<h1>Add Class</h1>


<form method='post' id="form">
    <fieldset>
        <legend>{{type}} Class</legend>

        <p>
            <label>Teacher</label>
            <select name='tid' id='tid'>
                {{#each teacherList}}
                    <option value={{this.id}} id="{{this.id}}">{{this.lname}}</option>
                {{/each}}
            </select>
        </p>

        <p>
            <label>Class</label>
            <select name='type' id='type'>
                <option value='writing' id="writing">Writing</option>
                <option value='reading' id="reading">Reading</option>
                <option value='math' id="math">Math</option>
                <option value='history' id="history">History</option>
                <option value='science' id="science">Science</option>
            </select>
        </p>

        <p>
            <label>Day</label>
            <select name='day' id='day'>
                <option value='Monday' id='Monday'>Monday</option>
                <option value='Tuesday' id='Tuesday'>Tuesday</option>
                <option value='Wednesday' id="Wednesday">Wednesday</option>
                <option value='Thursday' id="Thursday">Thursday</option>
                <option value='Friday' id="Friday">Friday</option>
            </select>
        </p>

        <p>
            <label>Time</label>
            <select name='time' id='time'>Time
                <option value='3:30' id="3:30">3:30</option>
                <option value='4:35' id="4:35">4:35</option>
                <option value='5:45' id="5:45">5:45</option>
                <option value='6:50' id="6:50">6:50</option>
                <option value='8:00' id="8:00">8:00</option>
            </select>
        </p>

        <p><label for='capacity'>Capacity:
            <input type='number' name='capacity' id='capacity'>
        </label></p>


        <p>
            <input type='submit' id='submitted'>
        </p>

        <script>
            if ("{{type}}" == "Edit") {

                var tid =  document.getElementById("{{row.tid}}");
                var type =  document.getElementById("{{row.type}}");
                var day =  document.getElementById("{{row.day}}");
                var time =  document.getElementById("{{row.time}}");

                var capacity = document.getElementById("capacity");

                if (tid) {
                    tid.selected = "selected";
                }

                if (type) {
                    type.selected = "selected";
                }

                if (day) {
                    day.selected = "selected";
                }

                if (time) {
                    time.selected = "selected";
                }

                if (capacity) {
                    capacity.value = "{{row.capacity}}";
                }


                var hiddenInput = document.createElement("input");
                hiddenInput.type = "hidden";
                hiddenInput.value = "{{row.id}}";
                hiddenInput.id = "id";
                document.getElementById("form").appendChild(hiddenInput);
            }
        </script>


        <script src='/clientClasses.js'> </script>